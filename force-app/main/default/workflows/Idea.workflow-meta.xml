    <rules>
        <fullName>Email to Channels at works Community Expert</fullName>
        <actions>
            <name>Email_to_Channels_at_works_Community_Alert</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Idea.CommunityId</field>
            <operation>equals</operation>
            <value>Channels at work</value>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
