    <rules>
        <fullName>Notify IDEA Creator based on Status</fullName>
        <actions>
            <name>Email_to_IDEA_Creator_Alert</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <formula>ISCHANGED( Status )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Notify IDEA Owner based on Comments</fullName>
        <actions>
            <name>Notify_Idea_Owner_based_on_Comments</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <formula>ISCHANGED( NumComments )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
