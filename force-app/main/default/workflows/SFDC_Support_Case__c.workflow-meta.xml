    <rules>
        <fullName>Send Email to TSG Service Now for Case Creation</fullName>
        <actions>
            <name>New_Support_Case_Created_Notification</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>SFDC_Support_Case__c.Assignment_to_Workgroup_Name__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>SFDC_Support_Case__c.Open_CI_Search_Code__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>SFDC_Support_Case__c.Type_of_Ticket__c</field>
            <operation>notEqual</operation>
            <value>Risk Approver Missing / Incorrect,Risk Approver Add New</value>
        </criteriaItems>
        <criteriaItems>
            <field>SFDC_Support_Case__c.Open_CI_Search_Code__c</field>
            <operation>notContain</operation>
            <value>&amp;</value>
        </criteriaItems>
        <criteriaItems>
            <field>SFDC_Support_Case__c.Type__c</field>
            <operation>equals</operation>
            <value>BreakFix</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
