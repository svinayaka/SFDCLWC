<apex:page controller="FAComparer" renderas="pdf" showheader="false" applyHtmlTag="false" applyBodyTag="false" sidebar="false" standardStylesheets="false">
  <html>
  <head>
  <style type="text/CSS">
   @page {
     size: A4 landscape;
     margin-left: 1%;
     margin-right: 1%;
     margin-top: 4%;
     margin-bottom: 4%;
     @top-left {
         content: "OG FA Compare Model";
         font-size: 70%;
     }
     @bottom-right {
         content: "Page " counter(page) " of " counter(pages);
         font-size: 70%;
     }
     @bottom-left {
         content: "Generated by: " String.valueOf({!$User.FirstName});
     }
  }
  .tablehead {
    background-color: gray;
    font: bold 15px Arial,Helvetica,sans-serif;
    color:white;
  }

  .odd {
    font: 15px Arial,Helvetica,sans-serif;
  }

  .even {
    background-color: #EFEFEB;
    font: 15px Arial,Helvetica,sans-serif;
  }

  .highlightcol {
    background-color: #99CCFF;
    font: bold 15px Arial,Helvetica,sans-serif;
    color:white;
  }

  </style>
  </head>
  <body>
  <apex:dataTable value="{!FieldList}" var="c" headerClass="tablehead" rowClasses="odd,even" style="font-size: 50%; width:100%; " >
      <apex:column style="border:1px;width:20%;" styleClass="highlightcol" > 
          <apex:facet name="header">{!objLabel} Field Name</apex:facet>
          <apex:outputText value="{!c.label}"/>
      </apex:column>
      <apex:column style="width:{!(80/count)}%;" rendered="{!If(count>=1,true,false)}"  >
          <apex:facet name="header" >Record 1</apex:facet>
          <apex:outputText value="{!c.record1}"/>
      </apex:column>
      <apex:column style="width:{!(80/count)}%;" rendered="{!If(count>=2,true,false)}" >
          <apex:facet name="header" >Record 2</apex:facet>
          <apex:outputText value="{!c.record2}"/>
      </apex:column>
      <apex:column style="width:{!(80/count)}%;" rendered="{!If(count>=3,true,false)}" >
          <apex:facet name="header" >Record 3</apex:facet>
          <apex:outputText value="{!c.record3}"/>
      </apex:column>
      <apex:column style="width:{!(80/count)}%;" rendered="{!If(count>=4,true,false)}" >
          <apex:facet name="header" >Record 4</apex:facet>
          <apex:outputText value="{!c.record4}"/>
      </apex:column>
      <apex:column style="width:{!(80/count)}%;" rendered="{!If(count>=5,true,false)}" >
          <apex:facet name="header" >Record 5</apex:facet>
          <apex:outputText value="{!c.record5}"/>
      </apex:column>
  </apex:dataTable>
  </body>
  </html> 
</apex:page>